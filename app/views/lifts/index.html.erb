<h1>Listing lifts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Duration</th>
    <th>Exercise</th>
    <th>Total reps</th>
    <th>Sets</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lifts.each do |lift| %>
  <tr>
    <td><%= lift.name %></td>
    <td><%= lift.duration %></td>
    <td><%= lift.exercise %></td>
    <td><%= lift.total_reps %></td>
    <td><%= lift.sets %></td>
    <td><%= link_to 'Show', lift %></td>
    <td><%= link_to 'Edit', edit_lift_path(lift) %></td>
    <td><%= link_to 'Destroy', lift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

